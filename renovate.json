{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "freezed",
      "matchManagers": [
        "pub"
      ],
      "matchPackageNames": [
        "freezed*"
      ]
    },
    {
      "groupName": "riverpod",
      "matchManagers": [
        "pub"
      ],
      "matchPackageNames": [
        "flutter_riverpod",
        "riverpod*"
      ]
    },
    {
      "groupName": "Flutter packages (non-major)",
      "matchManagers": [
        "pub"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "Android build tools",
      "matchManagers": [
        "gradle",
        "gradle-wrapper"
      ]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ]
    }
  ]
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "Flutters deps depending on source_gen",
      "matchManagers": [
        "pub"
      ],
      "matchPackageNames": [
        "drift*",
        "freezed*",
        "json_serializable",
        "flutter_riverpod",
        "riverpod*"
      ]
    },
    {
      "groupName": "Flutter deps (non-major)",
      "matchManagers": [
        "pub"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "Android build tools",
      "matchManagers": [
        "gradle",
        "gradle-wrapper"
      ]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ]
    }
  ]
}
